{
  "name": "brmm",
  "version": "0.0.1",
  "description": "",
  "main": "./dist/buildr.js",
  "bin": "./dist/buildr.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/sebtoombs/brmm"
  },
  "scripts": {
    "lint": "./node_modules/.bin/eslint src --ext .ts",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "jest",
    "test:e2e": "npm run build:dev && vitest run",
    "ci": "npm run lint && npm run test:unit -- --ci --coverage && npm run test:e2e",
    "clean": "shx rm -rf dist",
    "dev": "npm run build:dev && ./dist/brmm.js",
    "build:dev": "tsup",
    "build:production": "npm run clean && ncc build src/index.ts && shx mv dist/index.js dist/brmm.js",
    "build:package": "pkg dist/brmm.js -t node16-macos,node16-linux,node16-windows  -o dist/brmm --compress Brotli"
  },
  "keywords": [
    "brmm",
    "build",
    "build tool",
    "task runner",
    "task",
    "runner",
    "run task",
    "run",
    "dev tool"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-typescript": "^7.18.6",
    "@tsconfig/node16": "^1.0.3",
    "@types/jest": "^29.0.0",
    "@types/node": "^18.7.14",
    "@types/yargs": "^17.0.12",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@vercel/ncc": "^0.34.0",
    "clet": "^1.0.1",
    "eslint": "^8.23.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^29.0.2",
    "pkg": "^5.8.0",
    "shx": "^0.3.4",
    "supertest": "^6.2.4",
    "ts-jest": "^29.0.0-next.1",
    "ts-node": "^10.9.1",
    "tsup": "^6.2.3",
    "typescript": "^4.8.2",
    "vitest": "^0.23.1"
  },
  "dependencies": {
    "chalk": "^5.0.1",
    "execa": "^6.1.0",
    "winston": "^3.8.1",
    "yaml": "^2.1.1",
    "yargs": "^17.5.1",
    "yup": "^0.32.11"
  },
  "files": [
    "dist"
  ]
}
